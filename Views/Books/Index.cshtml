@model IEnumerable<Book>

<div class="container">
    <div class="jumbotron">
        <h2 class="text-center">List of Books</h2>
        @if (TempData["message"] != null)
        {
            <div class="alert alert-success">@TempData["message"]</div>

        }
    </div>
    <a asp-action="Create" class="btn btn-primary">Create New Book</a>

    <table class="table table-sm table-responsive table-bordered">
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Genre</th>
            <th>Year Of Released</th>
            <th>Price</th>
            <th>Publised Date</th>
            <th>Author Id</th>
            <th>Actions</th>
        </tr>
        @foreach (var b in Model)
        {
            <tr class="table-default">
                <td>@b.Id</td>
                <td>@b.Title</td>
                <td>@b.Genre</td>
                <td>@b.Year</td>
                <td>@b.Price.ToString("C")</td>
                <td>@b.Publiser</td>
                <td>@b.AuthorID</td>
                <td>
                    <form asp-action="Delete" asp-controller="Books" asp-route-id="@b.Id" method="post">
                        <a class="btn btn-sm btn-info" asp-action="Edit" asp-route-id="@b.Id">Edit</a>
                        <a asp-action="Index" asp-controller="Reviews" asp-route-id="@b.Id" class="btn btn-sm btn-primary">Reviews</a>
                        <input type="hidden" name="Id" value="@b.Id" />
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>

        }
    </table>
</div>
